{
  "name": "nubabi-firebase",
  "version": "0.0.0",
  "private": true,
  "description": "Firebase functions and security rules for Nubabi app",
  "repository":
    "https://gitlab.com/nubabi/mobile/tree/master/platforms/firebase",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "deploy": "yarn run package-functions && firebase deploy",
    "prepackage-functions": "rimraf functions",
    "package-functions":
      "./node_modules/.bin/babel 'functionsES6' --out-dir 'functions' --copy-files --ignore 'node_modules'",
    "postpackage-functions": "cd functions && yarn"
  }
}
